{
  "name":"bootcamp-fjord-jp",
  "scripts":{
    "postdeploy": "rails db:migrate db:seed"
  },
  "env":{
    "RACK_ENV": "review",
    "RAILS_ENV": "review",
    "HEROKU_APP_NAME": { "required": true },
    "HEROKU_PARENT_APP_NAME": { "required": true },
    "GOOGLE_STORAGE_BUCKET_NAME": "256interns-review",
    "GOOGLE_STORAGE_ACCESS_KEY": { "required": true },
    "GOOGLE_STORAGE_SECRET": { "required": true },
    "BOOTCAMP_PASSWORD":{ "required":true },
    "SLACK_WEBHOOK_URL":{ "required": true }
  },
  "addons":[
    "sendgrid",
    "heroku-postgresql",
    "newrelic",
    "papertrail"
  ],
  "environments": {
    "test": {
      "env": {
        "RACK_ENV": "test",
        "RAILS_ENV": "test",
        "HEROKU_APP_NAME": "bootcamp-fjord-jp-test",
        "HEROKU_PARENT_APP_NAME": "bootcamp-fjord-jp",
        "GOOGLE_STORAGE_BUCKET_NAME": "dummy",
        "GOOGLE_STORAGE_ACCESS_KEY": "dummy",
        "GOOGLE_STORAGE_SECRET": "dummy",
        "BOOTCAMP_PASSWORD": "dummy",
        "SLACK_WEBHOOK_URL": "dummy"
      },
      "scripts": {
        "test-setup": "gem install rubocop",
        "test": "./bin/test"
      },
      "addons":[
    		"heroku-postgresql"
      ],
      "buildpacks": [
        { "url": "heroku/ruby" },
        { "url": "https://github.com/heroku/heroku-buildpack-google-chrome" }
      ]
    }
  }
}
