{
  "extends": [
    "eslint:recommended",
    "standard",
    "plugin:react/jsx-runtime",
    "prettier"
  ],
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "window": true,
    "fetch": true,
    "FileReader": true,
    "Event": true,
    "FormData": true
  },
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "args": "all",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/jsx-uses-react": "error",   
    "react/jsx-uses-vars": "error" 
  }
}
