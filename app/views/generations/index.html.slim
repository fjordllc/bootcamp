- title '期生別ユーザー一覧'

header.page-header.is-border-bottom-none
  .container
    .page-header__inner
      h2.page-header__title ユーザー一覧
      .page-header-actions
        ul.page-header-actions__items

= render '/users/lg_page_tabs'

main.page-main
  header.page-main-header
    .container
      .page-main-header__inner
        h1.page-main-header__title
          = '期一覧'
  .page-body
    .container.is-lg
      - if @generations.present?
        .a-card
          = render partial: 'generations/generation', collection: @generations, as: :generation
      - else
        .o-empty-message
          .o-empty-message__icon
            i.fa-regular.fa-smile
          p.o-empty-message__text
            = title
            | はありません
