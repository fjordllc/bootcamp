- title "#{@user.login_name}の提出物"
header.page-header
  .container
    .page-header__inner
      h2.page-header__title
        = title
      .page-header-actions
        ul.page-header-actions__items
          li.page-header-actions__item
            = link_to "ユーザー一覧", users_path, class: "a-button is-md is-secondary is-block"

.page-tools
  = render "page_tabs", resource: @user

.page-body
  .container
    .thread-list.a-card
      = render partial: "products/product", collection: @products, as: :product
