.user-products-item
  = link_to [product.practice, product], itempro: "url", class: "user-products-item__link" do
    h3.user-products-item__title(itemprop="name")= product.title
    time.user-products-item__updated-at(datetime="#{product.updated_at.to_datetime}" pubdate="pubdate")
      = l product.updated_at, format: :semi_long
    - if product.comments.any?
      .user-products-item__comment-count
        .user-products-item__comment-count-label
          i.fa.fa-comment-o
        .user-products-item__comment-count-value
          = product.comments.count
