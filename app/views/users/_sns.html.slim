.sns-links
  ul.sns-links__items.is-button-group
    li.sns-links__item
      - if user.github_account?
        = link_to user_github_url(user), class: 'sns-links__item-link a-button is-sm is-secondary is-icon' do
          i.fa-brands.fa-github-alt
      - else
        .sns-links__item-link.a-button.is-sm.is-disabled.is-icon
          i.fa-brands.fa-github-alt
    li.sns-links__item
      - if user.twitter_account?
        = link_to user.twitter_url, class: 'sns-links__item-link a-button is-sm is-secondary is-icon' do
          i.fa-brands.fa-twitter
      - else
        .sns-links__item-link.a-button.is-sm.is-disabled.is-icon
          i.fa-brands.fa-twitter
    li.sns-links__item
      - if user.facebook_url?
        = link_to user.facebook_url, class: 'sns-links__item-link a-button is-sm is-secondary is-icon' do
          i.fa-brands.fa-facebook-square
      - else
        .sns-links__item-link.a-button.is-sm.is-disabled.is-icon
          i.fa-brands.fa-facebook-square
    li.sns-links__item
      - if user.blog_url?
        = link_to user.blog_url, class: 'sns-links__item-link a-button is-sm is-secondary is-icon' do
          i.fa-solid.fa-blog
      - else
        .sns-links__item-link.a-button.is-sm.is-disabled.is-icon
          i.fa-solid.fa-blog
    li.sns-links__item
      - if user.times_url?
        = link_to user.times_url, class: 'sns-links__item-link a-button is-sm is-secondary is-icon' do
          i.fa-solid.fa-clock
      - else
        .sns-links__item-link.a-button.is-sm.is-disabled.is-icon
          i.fa-solid.fa-clock
