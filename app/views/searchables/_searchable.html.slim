- result = matched_document(searchable)
.thread-list-item(class="is-#{result.class.to_s.tableize.singularize}")
  .thread-list-item__inner
    .thread-list-item__label
      = t("activerecord.models.#{result.class.to_s.tableize.singularize}")
    header.thread-list-item__header
      .thread-list-item__title
        = link_to result.title, searchable_url(searchable), class: 'thread-list-item__title-link'
    .thread-list-item__body
      .thread-list-item__summury
        = md_summury(filtered_message(searchable), 90)
      .thread-list-item-meta
        .thread-list-item-meta__user
          - unless searchable.try(:hide_user?)
            = link_to searchable.user.login_name, searchable.user, class: 'thread-header__author'
        time.thread-list-item-meta__updated-at(datetime="#{searchable.updated_at.to_datetime}" pubdate='pubdate')
          = l searchable.updated_at
