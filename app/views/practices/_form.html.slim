= form_for practice do |f|
  - if practice.errors.any?
    = error_messages_for :practice
  .form-group
    = f.label :title
    = f.text_field :title, size: '10', :required => true, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, size: '10x20', :required => true, class: 'form-control'
  .form-group
    = f.label :goal
    = f.text_area :goal, size: '10x10', :required => true, class: 'form-control'
  .form-group
    = f.label :category_id
    = f.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-control'
  .form-group
    = f.submit nil, class: 'btn btn-primary'
