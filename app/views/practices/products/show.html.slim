- title @practice.title
header.page-header
  .container
    .page-header__container
      h2.page-header__title
        = @practice.title
      .page-header__action
        = link_to practices_path, class: 'is-button-simple-md-secondary' do
          i.fa.fa-angle-left
          = t('practices')

= render "practices/page_tabs"

.container
  .col-md-6.col-xs-12
    - if admin_login? || Product.find_by(user_id: current_user.id, practice_id: @practice.id).checks.any?
      = render 'products', products: @practice.products.eager_load(:user, :comments).order(updated_at: :desc)
