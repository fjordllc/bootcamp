<table>
  <tr>
    <td style="padding: 24px 20px 0px 20px;" align="center">
      <div style="font-family: sans-serif ;text-align:center;">
        <h3 style="font-family: sans-serif; font-size: 20px; color:#4638a0; line-height: 1.4; margin-bottom: 0; font-weight: bold">フィヨルドブートキャンプへようこそ</h3>
      </div>
    </td>
  </tr>
  <tr>
    <td style="padding:16px 24px 16px 24px;" align="left">
      <div style="font-family:sans-serif; font-size:14px; line-height:1.8; text-align:left;">
        <% if @user.adviser? %>
          <%= render "adviser", user: @user %>
        <% else %>
          <%= render "student", user: @user %>
        <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <td style="padding:0 20px 20px 20px;" align="center">
      <table role="presentation" cellpadding="0" cellspacing="0" width="100%" align="center" border="0">
        <tbody>
          <tr>
            <td align="center" valign="middle">
              <%= link_to "フィヨルドブートキャンプへ", login_url, target: "_blank", style: "border-radius: 24px; color: #fff; text-decoration: none; background: #30ABDB; color: #fff; font-family: sans-serif; font-size: 14px; font-weight: bold; line-height: 1.4; display: block; width: 320px; max-width: 100%; margin: 0 auto; padding: 12px 0;" %>
            </td>
          </tr>
        </tbody>
      </table>
    </td>
  </tr>
</table>
