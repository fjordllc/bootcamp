- title '参考書籍'

header.page-header
  .container
    .page-header__inner
      h2.page-header__title
        = title
      .page-header-actions
        ul.page-header-actions__items
          - if current_user.admin_or_mentor?
            li.page-header-actions__item
              = link_to new_book_path, class: 'a-button is-md is-secondary is-block' do
                i.fas.fa-plus
                | 参考書籍登録

div(data-vue="Books" data-vue-is-admin:boolean="#{current_user.admin?}" data-vue-is-mentor:boolean="#{current_user.mentor?}")
