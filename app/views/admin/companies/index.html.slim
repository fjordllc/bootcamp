h1= t('listing_companies')
table.table
  tr
    th= t('helpers.label.company.name')
    th= t('helpers.label.company.description')
    th= t('helpers.label.company.website')
    th
    th
    th
  - @companies.each do |company|
    tr
      td= company.name
      td= company.description
      td= company.website
      td= link_to t('show'), admin_company_path(company)
      td= link_to t('edit'), edit_admin_company_path(company)
      td= link_to t('destroy'), admin_company_path(company), method: :delete, data:   confirm: t('are_you_sure')  
= link_to t('new_company'), new_admin_company_path, class: 'btn btn-primary'
