- title "会社"

header.page-header
  .container
    .page-header__inner
      h1.page-header__title = title
      .page-header-actions
        .page-header-actions__items
          .page-header-actions__item
            = link_to new_admin_company_path, class: "a-button is-md is-warning is-block" do
              i.fas.fa-plus
              | 会社作成

.page-tools
  = render "admin/admin_page_tabs"

.page-body
  .container.is-padding-horizontal-0-sm-down
    .admin-table
      table.admin-table__table
        thead.admin-table__header
          tr.admin-table__labels
            th.admin-table__label = Company.human_attribute_name :name
            th.admin-table__label = Company.human_attribute_name :logo
            th.admin-table__label = Company.human_attribute_name :description
            th.admin-table__label = Company.human_attribute_name :website
            th.admin-table__label = Company.human_attribute_name :slack_channel
            th.admin-table__label.actions 操作
        tbody.admin-table__items
          - @companies.each do |company|
            tr.admin-table__item(id="company_#{company.id}")
              td.admin-table__item-value
                - if company.present?
                  = company.name
              td.admin-table__item-value
                - if company.logo.attached?
                  = image_tag company.logo_url, class: "admin-table__item-logo-image"
              td.admin-table__item-value
                = company.description
              td.admin-table__item-value
                = company.website
              td.admin-table__item-value
                = company.slack_channel
              td.admin-table__item-value.is-text-align-center
                ul.is-button-group
                  li
                    = link_to edit_admin_company_path(company), class: "a-button is-sm is-primary is-icon" do
                      i.fas.fa-pen
                  li
                    = link_to [:admin, company],
                      data: { confirm: "本当によろしいですか？" },
                      method: :delete,
                      class: "a-button is-sm is-danger is-icon js-delete" do
                      i.fas.fa-trash-alt
