= form_for([:admin, category], html: { name: "category", class: "form" }) do |f|
  .form__items
    .form-item
      .row
        .col-md-6.col-xs-12
          = f.label :name, class: "a-label"
          = f.text_field :name, class: "a-text-input js-warning-form"
    .form-item
      .row
        .col-md-6.col-xs-12
          = f.label :slug, class: "a-label"
          = f.text_field :slug, class: "a-text-input js-warning-form"
    .form-item
      .row.js-markdown-parent
        .col-md-6.col-xs-12
          = f.label :description, class: "a-label"
          = f.text_area :description, class: "a-text-input js-warning-form js-markdown practices-edit__input"
        .col-md-6.col-xs-12
          .a-label
            | プレビュー
          .js-markdown-preview.is-long-text.practices-edit__input.practices-edit__preview
  .form-actions
    ul.form-actions__items
      li.form-actions__item
        = link_to "キャンセル", admin_categories_path, class: "a-button is-md is-secondary"
      li.form-actions__item
        = f.submit nil, class: "a-button is-lg is-warning"
