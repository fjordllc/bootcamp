.company-counts
  dl.company-counts__items
    - unless users.mentor.empty?
      .company-counts__item
        .company-counts__item-inner
          dt.company-counts__item-label
            | メンター
          dd.company-counts__item-value
            = users.mentor.size
    .company-counts__item
      .company-counts__item-inner
        dt.company-counts__item-label
          | アドバイザー
        dd.company-counts__item-value
          = users.unretired.advisers.size
    .company-counts__item
      .company-counts__item-inner
        dt.company-counts__item-label
          | 現役生
        dd.company-counts__item-value
          = users.students_and_trainees.size
    - unless users.admins.empty?
      .company-counts__item
        .company-counts__item-inner
          dt.company-counts__item-label
            | 管理者
          dd.company-counts__item-value
            = users.admins.size
