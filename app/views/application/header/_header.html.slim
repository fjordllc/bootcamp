header.header
  .container.has-no-right-padding
    .header__container
      .header__start
        = link_to root_path, class: 'header__title' do
          = image_tag('pjord-face.svg', alt: 'プログラミングスクール', class: 'header__title-image')
          - unless current_user.current_student?
            .a-user-role-badge.is-header
              - if current_user.graduated_on?
                span.a-user-role-badge__label(class='is-graduate') 卒業生
              - if current_user.adviser?
                span.a-user-role-badge__label(class='is-adviser') アドバイザー
              - if current_user.mentor?
                span.a-user-role-badge__label(class='is-mentor') メンター
              - if current_user.admin?
                span.a-user-role-badge__label(class='is-admin') 管理者

        - if admin_or_mentor_login?
          = render 'application/header/mentor_mode_switch'
      .header__end
        = render 'application/header/header_links'
        #js-notifications-mobile
