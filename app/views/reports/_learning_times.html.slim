- if @report.total_learning_time.zero?
  .learning-times
    header.learning-times__header
      h2.learning-times__title 学習時間無し
- else
  .learning-times
    header.learning-times__header
      h2.learning-times__title 学習時間:
      span.learning-times__total-time = minute_to_span @report.total_learning_time
    ul.learning-times__items
      - @report.learning_times.each do |learning_time|
        li.learning-times__item
          | #{l learning_time.started_at, format: :time_only} 〜 #{l learning_time.finished_at, format: :time_only}
