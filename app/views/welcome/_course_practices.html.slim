article.course-selection-item.a-card
  .course-selection-item__inner
    header.course-selection-item__header
      h2.course-selection-item__title.text-center
        | #{course.title}
        br
        | コース
    .course-selection-item__body
      section.course-selection-item__section
        .a-long-text
          h2
            | カリキュラム一覧
          - course.categories.each do |category|
            - if category.practices.present?
              h4
                = category.name
              table.welcome-table.a-card
                - category.practices.each do |practice|
                  tr
                    td
                      = practice.title
